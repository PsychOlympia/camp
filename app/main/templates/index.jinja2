{% extends 'base.jinja2' %}

{% block title %}{{ _('Home') }} - {{ super() }}{% endblock %}

{% block content %}
    <div style="display: flex; flex-direction: column; align-items: center; gap: 30px;">
        <h1>Hello PsychOlympia!</h1>
        {% if current_user.is_authenticated %}
            <div style="display: flex; flex-direction: column; align-items: center;">
                <p>Logged in as {{ current_user.username }}</p>
                <p>Has the following roles:
                    {% if current_user.roles | length > 0 %}
                        {% for role in current_user.roles %}
                            <a href="/{{ role.name }}">{{ role.name }}</a>
                            {% if not loop.last %},{% endif %}
                        {% endfor %}
                    {% else %}
                        <span>None</span>
                    {% endif %}
                </p>
            </div>
            <form action="{{ url_for('auth.logout') }}" method="post">
                <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                <button type="submit" style="display: flex; align-items: center; gap: 5px;">
                    <span class="material-symbols-outlined">logout</span>
                    Logout
                </button>
            </form>
        {% else %}
            <a href="{{ url_for('auth.login') }}" style="display: flex; align-items: center; gap: 5px; text-decoration: none;">
                <span class="material-symbols-outlined">login</span>
                Login
            </a>
        {% endif %}
        <div style="display: flex; flex-direction: column; gap: 5px; align-items: center;">
            <a href="{{ url_for('main.team_map') }}" style="display: flex; gap: 5px; align-items: center; text-decoration: none;"><span class="material-symbols-outlined">public</span>Teamkarte</a>
            <a href="{{ url_for('main.camp_map') }}" style="display: flex; gap: 5px; align-items: center; text-decoration: none;"><span class="material-symbols-outlined">camping</span>Campkarte</a>
        </div>
    </div>
{% endblock %}
