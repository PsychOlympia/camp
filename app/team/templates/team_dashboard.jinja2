{% extends 'dashboard.jinja2' %}

{% block content %}
<div style="display: flex; flex-direction: column; align-items: center;">
    <h3>{{ _('Hello %(username)s!', username=current_user.username) }}</h3>
    <h4>Team-Dashboard</h4>

    <a href="{{ url_for('settings.team') }}" style="display: flex; align-items: center; gap: 5px; text-decoration: none;">
        <span class="material-symbols-outlined">settings</span>
        {{ _('Team profile settings') }}
    </a>
    <a href="{{ url_for('scoreboard.index') }}" style="display: flex; align-items: center; gap: 5px; text-decoration: none;">
        <span class="material-symbols-outlined">scoreboard</span>
        {{ _('Scoreboard') }}
    </a>
</div>
{% endblock %}
